    "test": "lerna run test",
    "publish": "npm run clean && npm run build && lerna publish -m \"Publish npm packages\"",
    "watch": "tsc --build --watch"
  },
  "devDependencies": {
    "lerna": "^3.14.1",
    "rimraf": "^2.6.3",
    "typescript": "~3.5.1"
  }
